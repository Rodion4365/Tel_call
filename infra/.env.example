# Hostnames used by Traefik routers (adjust to your domain)
BACKEND_HOST=api.telcall.local
FRONTEND_HOST=app.telcall.local

# PostgreSQL credentials
POSTGRES_USER=app
POSTGRES_PASSWORD=apppassword
POSTGRES_DB=app

# WebRTC server discovery passed to the backend
STUN_SERVERS=stun:stun.l.google.com:19302
TURN_SERVERS=turns:turn.example.com:5349?transport=tcp

# TURN credentials (do not commit real values)
TURN_REALM=telcall.local
TURN_SERVER_NAME=turn.telcall.local
TURN_USERNAME=replace_me
TURN_PASSWORD=replace_me
# Additional flags such as external IP can be appended here, e.g.:
# TURN_EXTRA_OPTS=--external-ip=203.0.113.10
TURN_EXTRA_OPTS=
