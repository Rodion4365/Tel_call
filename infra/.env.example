# Hostnames used by Traefik routers (use your actual domains)
BACKEND_HOST=api.callwith.ru
FRONTEND_HOST=app.callwith.ru

# PostgreSQL credentials
POSTGRES_USER=app
POSTGRES_PASSWORD=apppassword
POSTGRES_DB=app

# WebRTC server discovery passed to the backend
STUN_SERVERS=stun:stun.l.google.com:19302
TURN_SERVERS=

# TURN server configuration (optional - if you have your own TURN server)
TURN_REALM=callwith.ru
TURN_SERVER_NAME=turn.callwith.ru
TURN_USERNAME=replace_me
TURN_PASSWORD=replace_me
# Additional flags such as external IP can be appended here, e.g.:
# TURN_EXTRA_OPTS=--external-ip=88.218.68.63
TURN_EXTRA_OPTS=
