# Application
APP_NAME=Tel Call Backend
DEBUG=false

# Database (for Docker use postgres as host, for local use localhost)
DATABASE_URL=postgresql+asyncpg://app:apppassword@postgres:5432/app

# Telegram Bot
BOT_TOKEN=YOUR_BOT_TOKEN_HERE
BOT_USERNAME=YOUR_BOT_USERNAME_HERE
BOT_WEBHOOK_URL=https://api.callwith.ru/api/telegram/webhook

# Security
SECRET_KEY=YOUR_SECRET_KEY_HERE_MIN_32_CHARS
ACCESS_TOKEN_EXPIRE_MINUTES=240  # 4 hours (optimal for Telegram Mini App)
REFRESH_TOKEN_EXPIRE_DAYS=30  # 30 days for long-term auth

# CORS (adjust to your frontend domain)
CORS_ALLOW_ORIGINS=https://app.callwith.ru

# WebRTC (optional, can be left empty)
STUN_SERVERS=stun:stun.l.google.com:19302
TURN_SERVERS=
