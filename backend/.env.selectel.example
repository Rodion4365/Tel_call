# =====================================================
# КОНФИГУРАЦИЯ ДЛЯ SELECTEL
# =====================================================
# Скопируйте этот файл в backend/.env и заполните значения

# === ОБЯЗАТЕЛЬНЫЕ ПЕРЕМЕННЫЕ ===
# База данных PostgreSQL (используйте имя сервиса из docker-compose)
DATABASE_URL=postgresql://app:apppassword@postgres:5432/app

# Секретный ключ для JWT токенов (ОБЯЗАТЕЛЬНО замените на случайный!)
# Генерация: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=ЗАМЕНИТЕ_НА_СВОЙ_СЕКРЕТНЫЙ_КЛЮЧ_МИНИМУМ_32_СИМВОЛА

# Telegram бот (получите от @BotFather)
BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
BOT_USERNAME=your_bot_name_bot

# === ВАЖНЫЕ ДЛЯ PRODUCTION ===
# URL для Telegram webhook
BOT_WEBHOOK_URL=https://api.callwith.ru/api/telegram/webhook

# CORS - разрешенные домены фронтенда (через запятую, без пробелов)
CORS_ALLOW_ORIGINS=https://app.callwith.ru

# === ОПЦИОНАЛЬНЫЕ (с разумными значениями по умолчанию) ===
# Название приложения
APP_NAME=Tel Call Backend

# Режим отладки (false для production)
DEBUG=false

# Время жизни JWT токена в минутах (по умолчанию: 43200 = 30 дней)
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# === WebRTC СЕРВЕРЫ ===
# STUN серверы (через запятую, без пробелов)
STUN_SERVERS=stun:stun.l.google.com:19302

# TURN серверы (если используете свой TURN сервер)
# TURN_SERVERS=turns:your-turn-server.com:5349?transport=tcp
# TURN_USERNAME=turn_user
# TURN_PASSWORD=turn_password

# === ЛИМИТЫ ===
# Максимальное количество участников в одном звонке (по умолчанию: 30)
MAX_PARTICIPANTS_PER_CALL=30

# Максимальное количество активных звонков на одного пользователя (по умолчанию: 5)
MAX_ACTIVE_CALLS_PER_USER=5

# Максимальная продолжительность звонка в часах (по умолчанию: 12)
MAX_CALL_DURATION_HOURS=12

# Максимальный размер WebSocket сообщения в байтах (по умолчанию: 1048576 = 1MB)
MAX_WEBSOCKET_MESSAGE_SIZE=1048576

# Время в минутах для очистки пустых комнат (по умолчанию: 5)
EMPTY_ROOM_CLEANUP_MINUTES=5
